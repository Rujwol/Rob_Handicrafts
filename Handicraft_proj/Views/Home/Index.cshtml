<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Handicraft Store</title>
    <link href="~/css/views/home/index.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="hero-section">
            <h1>Welcome to our Handicraft Store!</h1>
            <p>Discover unique and beautiful handmade crafts from talented artisans around the world.</p>
            <a asp-controller="Products" asp-action="AllProducts" class="btn">Browse More Products</a>
        </div>

        <div class="grid-container">
            @for (int i = 1; i <= 6; i++)
            {
                <div class="grid-item">
                    <h2>Product @i</h2>
                    <p>Description of the product goes here.</p>
                </div>
            }
        </div>
    </div>
</body>
</html>
